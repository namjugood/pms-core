{
  "name": "contribution-score-evaluator",
  "version": "1.1.1",
  "description": "기여도 평가 점수 관리 프로그램",
  "main": "dist/main/main.js",
  "scripts": {
    "build": "node build.js",
    "start": "npm run build && electron .",
    "dev": "node build.js && electron .",
    "pack": "npm run build && electron-builder --dir",
    "dist": "npm run build && electron-builder"
  },
  "keywords": [
    "electron",
    "contribution",
    "evaluation"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "typescript": "^5.3.3"
  },
  "build": {
    "appId": "com.contribution.score.evaluator",
    "productName": "기여도 평가 점수 프로그램",
    "directories": {
      "output": "package"
    },
    "files": [
      "dist/**/*",
      "package.json"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ],
      "sign": false
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
